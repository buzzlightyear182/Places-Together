This is the create a new trip form!
<br/>
<% if @errors != nil %>
  <% @errors.each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<%= form_for @trip do |f| %>
  <%= f.label "Where do you want to go?" %></br>
  <%= f.text_field :place, :value => @temporary_place %></br></br>

  <%= f.label "What do you want to do?" %></br>
  <% @activities.each do |a| %>
    <%= f.radio_button :activity, a.activity_name %>
    <%= a.activity_name %> <br/>
    <% end %>
    <%= f.radio_button :activity, "" %>
    <%= "Or create your own:"%> <br/>
    <%= f.text_field :activity_create, :value => @temporary_activity  %>

  </br></br>

  <%= f.label "From when?" %></br>
  <%= f.date_field :from_date %> <br/>

  <%= f.label "Until when?" %></br>
  <%= f.date_field :to_date %> <br/></br>

  <%= f.label "How many people do you need?" %></br>
  <%= f.text_field :capacity %></br>

  <%= f.label "Write something about your trip" %></br>
  <%= f.text_area :description %></br>

  <%= f.submit "Save" %>
<% end %>
