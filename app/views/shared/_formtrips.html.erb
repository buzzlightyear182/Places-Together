<%= form_for @trip do |f| %>
	<%= f.label "Where do you want to go?" %></br>
	<%= f.text_field :place %></br></br>
	<%= f.label "What do you want to do?" %></br>
	<%= f.text_field :activity %></br></br>
	<%= f.label "From when?" %></br>
	<%= f.date_select :from_date %> <br/>
	<%= f.label "Until when?" %></br>
	<%= f.date_select :to_date %> <br/></br>
	<%= f.label "How many people do you need?" %></br>
	<%= f.text_field :capacity %></br>
	<%= f.label "Write something about your trip" %></br>
	<%= f.text_area :description %></br>
	<%= f.submit "Save" %>
<% end %>