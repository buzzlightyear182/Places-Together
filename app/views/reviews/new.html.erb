This is the create a new review form!
<br/>
<% if @errors != nil %>
  <% @errors.each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<%= form_for [@profile, @review] do |f| %>
  You are reviewing: <%= @reviewee.username %> for trip:
  <%= f.select :trip, options_for_select(@common_trips) %>
  <%= f.label "Please leave an honest review" %>
  <%= f.text_field :content %>
  <%= f.label "How would you rate this person?" %>
  1<%= f.range_field :rating, in: 1..10 %>10
  <%= f.button :submit %>
<% end %>
