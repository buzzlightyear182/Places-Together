Welcome! This is the Place index page

	<% if user_signed_in? %>
		<div class="loggedin">
		Welcome <%= current_user.username %>
		<%= link_to "Logout?", destroy_user_session_path, method: 'delete', confirm: 'Are you sure?' %>
		</div>
	<% else %>
		<div class="notloggedin">
		<%= link_to "Sign-up now", new_user_registration_path, method: 'get' %>
		</div>
	<% end %>

<p>Where are you planning to go?</p>

<ul>
<% @places.each do |place| %>
<li><%= link_to place.city, place_trips_path(place.id) %></li>
<% end %>
</ul>

<p>What do you want to do?</p>

<ul>
<% @activities.each do |activity| %>
<li><%= link_to activity.activity_name, activity_trips_path(activity.id) %></li>
<% end %>
</ul>